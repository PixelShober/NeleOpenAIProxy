<Window x:Class="NeleDesktop.Views.MoveToFolderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Move to folder"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        Background="{DynamicResource WindowBackgroundBrush}"
        ResizeMode="NoResize">
    <StackPanel Margin="20" Width="320">
        <TextBlock Text="Select a folder" FontWeight="SemiBold" Margin="0,0,0,8" />
        <ListBox ItemsSource="{Binding Options}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedOption}" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Cancel" Click="Cancel_Click" Background="{DynamicResource PanelBackgroundBrush}" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,8,0" />
            <Button Content="Move" Click="Move_Click" />
        </StackPanel>
    </StackPanel>
</Window>
