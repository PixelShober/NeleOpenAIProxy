<Window x:Class="NeleDesktop.Views.PromptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Prompt"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        Background="{DynamicResource WindowBackgroundBrush}"
        ResizeMode="NoResize">
    <StackPanel Margin="20" Width="360">
        <TextBlock x:Name="PromptText" Text="Prompt" FontWeight="SemiBold" Margin="0,0,0,8" />
        <TextBox x:Name="InputBox" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Cancel" Click="Cancel_Click" Background="{DynamicResource PanelBackgroundBrush}" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,8,0" />
            <Button Content="OK" Click="Ok_Click" />
        </StackPanel>
    </StackPanel>
</Window>
